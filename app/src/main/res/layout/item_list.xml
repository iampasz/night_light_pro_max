<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constrain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/item_bg"
    android:padding="10dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/square_button"
        android:layout_height="@dimen/square_button"
        android:background="@drawable/item_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/an_ant" />

    <TextView
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="gravity"
        android:textColor="#fff"
        android:textSize="@dimen/text_name"

        android:shadowColor="@color/text_shadow"
        android:shadowDx="@dimen/button_shadowDx"
        android:shadowDy="@dimen/button_shadowDy"
        android:shadowRadius="@dimen/button_shadowRadius"

        app:layout_constraintBottom_toBottomOf="@+id/image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image"
        app:layout_constraintTop_toTopOf="@+id/image" />
</androidx.constraintlayout.widget.ConstraintLayout>